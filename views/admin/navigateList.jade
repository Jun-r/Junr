doctype
html
    head
        meta(charset="utf-8")
        title #{title}
        link(href="/css/admin.css",rel="stylesheet")
    body.sub-body
        div.pos-rlt.p-md
            span 首页
                em >
                span 导航列表
        div.p-md.m-top
            div.panel.panel-default
                div.panel-body
                    div.tab_t
                        span.a.active 导航列表
                    div.targetSearch
                        button.btn.btn-info.btn-sm(type="button") 搜索
                        input.form-control.ng-isolate-scope(type="text",placeholder="请输入文章名称")
                table.table.table-striped
                    thead
                        tr
                            th.t-c(width="18")
                                div.checkbox(style='margin: 0')
                                    label.ui-checks
                                        input(type="checkbox",value="")
                                        i
                            th.t-l(width="350") 菜单名称
                            th.t-c 排序
                            th.t-c 链接
                            th.t-c(width="150") 操作
                    tbody
                        if friendlylink == ''
                            tr.ng-scope
                                td(rowspan="1",colspan="5")
                                    div.nolist 暂时找不到导航
                        each item in navigates
                            tr.ng-scope
                                td.ng-binding
                                    div.checkbox(style='margin: 0')
                                        label.ui-checks
                                            input(type="checkbox",value="")
                                            i.ti-check
                                td.ng-binding #{item.name}
                                td.ng-binding.t-c #{item.sort}
                                td.ng-binding.t-c #{item.url}
                                td.ng-binding
                                    div.operation
                                        a(href="/admin/navigate/update/#{item._id}") 修改
                                        em.mar
                                        a(href="/admin/navigate/delete/#{item._id}") 删除
                div.table-page
                    div.pull-left
                        div.checkbox
                            label.ui-checks
                                input(type="checkbox",value="")
                                i
                                em 全选
                        button.btn.btn-sm.btn-danger 批量删除
                    div.pull-right.page-box
                        //div.pagination-info 共有3条，每页显示20条


        script(src="http://cdn.bootcss.com/jquery/2.2.0/jquery.min.js",type="text/javascript")
        script(src="/js/adminBase.js",type="text/javascript")
