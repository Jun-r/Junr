doctype
html
    head
        meta(charset="utf-8")
        title #{title}
        link(href="/css/admin.css",rel="stylesheet")
    body.sub-body
        div.pos-rlt.p-md
            span 首页
                em >
                span 友情连接
        div.p-md.m-top
            div.panel.panel-default
                div.panel-body
                    div.tab_t
                        span.a.active 友情连接
                    div.targetSearch
                    button#addlink.btn.m-r10.btn-sm.btn-success 添加连接
                table.table.table-striped
                    thead
                        tr
                            th.t-c(width="18")
                                div.checkbox(style='margin: 0')
                                    label.ui-checks
                                        input(type="checkbox",value="")
                                        i
                            th.t-l(width="350") 名称
                            th.t-c 排序
                            th.t-c 连接
                            th.t-c(width="150") 操作
                    tbody
                        if friendlylink == ''
                            tr.ng-scope
                                td(rowspan="1",colspan="5")
                                    div.nolist 暂时找不到连接列表
                        each item in friendlylink
                            tr.ng-scope
                                td.ng-binding
                                    div.checkbox(style='margin: 0')
                                        label.ui-checks
                                            input(type="checkbox",value="")
                                            i.ti-check
                                td.ng-binding  #{item.name}
                                td.ng-binding.t-c #{item.sort}
                                    td.ng-binding.t-c #{item.Link}
                                td.ng-binding
                                    div.operation
                                        a.edit(href="javascript:;",data-json="#{item._id},#{item.name},#{item.sort},#{item.Link}") 修改
                                        em.mar
                                        a.delete(href="javascript:;" data-id="#{item._id}") 删除

                div.table-page
                    div.pull-left
                        div.checkbox
                            label.ui-checks
                                input(type="checkbox",value="")
                                i
                                em 全选
                        button#deleteAll.btn.btn-sm.btn-danger 批量删除
                    div.pull-right.page-box
                        div.pagination-info 共有#{pagesise}条，每页显示20条
                        !{laypage}
        div.varsion-box.hide
            div.pane-body.varsion-alert(style="width:370px;height:200px")
                div.form-group.m-h-n.clearfix
                    label.col-sm-2.control-label 名称:
                    div.col-sm-9
                        input#CateName.form-control(type="text",name="name")
                div.form-group.m-h-n.clearfix
                    label.col-sm-2.control-label 排序:
                    div.col-sm-9
                        input#Alias.form-control(type="number",name="sort")
                div.form-group.m-h-n.clearfix
                    label.col-sm-2.control-label 连接:
                    div.col-sm-9
                        input#Link.form-control(type="text",name="Link")
                div.form-group.m-h-n.clearfix
                    label.col-sm-2.control-label
                    div.col-sm-5
                        button#ok_creative.btn.btn-sm.btn-danger 确定
        input(type="hidden",value="" id="categoryId" name="_id")
        script(src="http://cdn.bootcss.com/jquery/2.2.0/jquery.min.js",type="text/javascript")
        script(src="/js/adminBase.js",type="text/javascript")
        script(src="/js/link.js",type="text/javascript")
