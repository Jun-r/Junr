extends ./layout
block content
    body.page
        include ./includes/header
        #J-wrapper.contain
            .entry.clearfix
                h2.entry-title #{title}
                p.entry-crumb
                    a.pjax(href='/') Home
                    | ›
                    a.pjax(href='/#{Alias}') #{title}
                div.entry-list
                    ul.entry-list-archive
                        each item in articleList
                            li.fn-clear
                                a(href='/#{Alias}/#{item.alias}') #{item.title}
                                time #{moment(item.publish).format('YYYY-MM-DD')}
                .entry-right
                    ul.entry-right-list
                        li.date 文章分类
                            each item in categorys
                                li.tag
                                    a.pjax(href='/#{item.Alias}') #{item.CateName}

        include ./includes/footer
        script(src="http://cdn.bootcss.com/jquery/2.2.0/jquery.min.js",type="text/javascript")
        script(src="/dist/js/common.js",type="text/javascript")
