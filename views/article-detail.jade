extends ./layout
block content
    link(href="/css/editormd.css",rel="stylesheet")
    body.page
        include ./includes/header
        #J-wrapper.contain
            .entry.clearfix
                h2.entry-title #{articleShow.title}
                p.entry-crumb
                    a.pjax(href='/') Home
                    | ›
                    a.pjax(href='/#{categoryName}') #{categoryName}
                    | ›
                    a.pjax(href='/#{categoryName}/#{articleShow.alias}') #{articleShow.title}
                .entry-main#editormd-view
                    textarea(style="display:none") !{articleShow.markdownContent}
                    .entry-other.clearfix
                        //a.left.pjax(href='../atp/2016-02-17-reedsy.html', rel='bookmark', title='The older post') ← 一个适合出版物写作的平台
                        //a.right.pjax(href='../atp/2016-02-18-panda.html', rel='bookmark', title='The newer post') 一个内容聚合展现工具→
                .entry-right
                    ul.entry-right-list
                        li.date 文章分类
                        each item in categorys
                            li.tag
                                a.pjax(href='/#{item.Alias}') #{item.CateName}
                    //ul.entry-right-list
                    //    li.date 将文章分享到
                    //    li.tag
                    //        a#sina-share(rel='nofollow', href='#', title='新浪微博') 新浪微博
                    //    li.tag
                    //        a#tencent-share(rel='nofollow', href='#', title='腾讯微博') 腾讯微博
                    //    li.tag
                    //        a#douban-share(rel='nofollow', href='#', title='豆瓣') 豆瓣

                .clearfix
                .entry-disqus
        include ./includes/footer
        script(src="http://cdn.bootcss.com/jquery/1.11.0/jquery.min.js",type="text/javascript")
        script(src="/dist/js/editormd.js",type="text/javascript")
        script(src="/dist/js/common.js",type="text/javascript")
        script.
            $(function () {
                var testEditormdView2 = editormd.markdownToHTML("editormd-view", {
                    htmlDecode: "style,script,iframe",  // you can filter tags decode
                    taskList: true,
                });
            })
